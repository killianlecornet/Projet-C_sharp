<Window x:Class="Porjet_C.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Jotaro-vs-Dio" Height="500" Width="900">
    <Grid RenderTransformOrigin="0.488,0.477">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MediaElement Source="C:\Users\killi\OneDrive\Bureau\Porjet-C\Porjet-C\jotaro-vs-dio.mp4" LoadedBehavior="Manual" Name="LecteurVideo"/>
        <StackPanel Grid.Row="1">
            <Label x:Name="lblStatus" Content="00:00 / 02:10" HorizontalContentAlignment="Center" Margin="6" />
            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="btnPlay" Click="btnPlay_Click" Width="76" Content="Play"/>
                <Button x:Name="btnPause" Margin="5,0" Click="btnPause_Click" Width="76" Content="Pause"/>
                <Button x:Name="btnStop" Click="btnStop_Click" Width="76" Content="Stop"/>
                <Button Content="Sous-Titre"  Margin="5,0" Width="76" Click="btnSubtitle_Click"/>
            </WrapPanel>
        </StackPanel>
        
    </Grid>
</Window>
    